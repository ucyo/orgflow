{
    "name": "Org-mode",
    "image": "rust:1.85-slim-bookworm",
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer"
            ]
        }
    },
    "postCreateCommand": "apt-get update && apt-get install -y make && rustup component add clippy rustfmt"
}